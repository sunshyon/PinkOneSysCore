@{
    ViewBag.Title = "主页";
    Layout = "~/Areas/WxRelated/Views/Shared/Wx_Layout.cshtml";
}
@model ModelSysWxUser
<style>
    .homeMainNav{
        border:1px solid rgba(234, 229, 229, 0.68);
        text-align:center;
        margin:2px 0;
        padding:12px 0;
    }
</style>
<div class="container">
    <div class="row">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Images/login_slide1.jpg" />
                </div>
                <div class="carousel-item">
                    <img src="~/Images/login_slide2.jpg" />
                </div>
                <div class="carousel-item">
                    <img src="~/Images/login_slide3.jpg" />
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="row margin">
        <div class="col-4" style="padding:2px;">
            <div class="homeMainNav text-green" onclick="window.location.href='/WxRelated/Center/WxBind'">
                <div><i class="fa fa-wechat fa-2x"></i> ~ <i class="fa fa-user fa-2x"></i></div>
                微信关联
            </div>
        </div>
        <div class="col-4" style="padding:2px;">
            <div class="homeMainNav text-primary">
                <div><i class="fa fa-pencil fa-2x"></i> </i></div>
                考勤记录
            </div>
        </div>
        <div class="col-4" style="padding:2px;">
            <div class="homeMainNav text-info">
                <div><i class="fa fa-newspaper-o fa-2x"></i></div>
                新闻动态
            </div>
        </div>
    </div>
</div>
<script>
    var userType=@Model.UserType;
    if(userType==0){
        swal({
            title: "",
            text: "您还未进行任何绑定关联,请先关联微信",
            type: "warning",
            showCancelButton: true,
            confirmButtonText: "去绑定",
            cancelButtonText: "取消",
            closeOnConfirm: false,
            //closeOnCancel:false
        }, function () {
            //window.location.href="/WxRelated/OAuth?type=2";
            window.location.href="/WxRelated/Center/WxBind";
        })
    }
</script>

